# Configuration Ollama
OLLAMA_HOST=http://ollama:11434
MODEL_NAME=llama3.1:8b
EMBED_MODEL=nomic-embed-text

# Configuration ChromaDB
CHROMA_HOST=http://chroma:8000

# Configuration RAG
TOP_K=4
CHUNK_SIZE=900
CHUNK_OVERLAP=150

# Configuration PostgreSQL
# Super-utilisateur - Utilisé pour l'initialisation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production-for-postgres-superuser

# Utilisateur/Base de données pour N8N
N8N_DB_USER=n8n_user
N8N_DB_PASSWORD=change-me-in-production-for-n8n-user
N8N_DB_NAME=n8n

# Utilisateur/Base de données pour l'Application
APP_DB_USER=myia_user
APP_DB_PASSWORD=change-me-in-production-for-app-user
APP_DB_NAME=myia_db

# URL de connexion pour l'application (utilisée par FastAPI/Alembic)
DATABASE_URL=postgresql+asyncpg://${APP_DB_USER}:${APP_DB_PASSWORD}@postgres:5432/${APP_DB_NAME}

# Configuration N8N
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me-in-production
N8N_HOST=localhost
N8N_PORT=5678

# Sécurité API (changer en production!)
API_KEY=change-me-in-production

# Logging
LOG_LEVEL=INFO
